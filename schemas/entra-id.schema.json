{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "entra-id.schema.json",
	"title": "Entra ID User Objects",
	"description": "A list of users from EntraID ",
	"type": "object",
	"additionalProperties": true,
	"required": ["id", "employeeId", "givenName", "surname", "userPrincipalName"],
	"properties": {
		"employeeId": {
			"type": "integer",
			"description": "The employee's unique identifier"
		},
		"id": {
			"type": "string",
			"description": "The unique identifier within the EntraID"
		},
		"givenName": {
			"type": ["string"],
			"description": "The employee's given name"
		},
		"surname": {
			"type": ["string"],
			"description": "The employee's surname"
		},
		"userPrincipalName": {
			"type": ["string"],
			"description": "The employee's email address"
		}
	}
}
