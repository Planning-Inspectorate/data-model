{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "s51-advice.schema.json",
	"title": "S51 Advice",
	"description": "Section 51 Advice schema",
	"type": "object",
	"required": [
		"adviceId",
		"adviceReference",
		"caseId",
		"caseReference",
		"title",
		"from",
		"agent",
		"method",
		"enquiryDate",
		"enquiryDetails",
		"adviceGivenBy",
		"adviceDate",
		"adviceDetails",
		"status",
		"redactionStatus",
		"attachmentIds"
	],
	"properties": {
		"adviceId": {
			"type": "integer",
			"examples": [1234]
		},
		"adviceReference": {
			"type": "string",
			"examples": ["TR0200007-0005"]
		},
		"caseId": {
			"type": ["integer", "null"],
			"examples": [1234]
		},
		"caseReference": {
			"type": ["string", "null"],
			"examples": ["BC0110002"]
		},
		"title": {
			"type": "string",
			"description": "Title of the advice",
			"examples": ["Advice following issue of decision to accept the application for examination"]
		},
		"from": {
			"type": ["string", "null"],
			"description": "Who the enquiry is from"
		},
		"agent": {
			"type": ["string", "null"],
			"description": "Who the enquiry is on behalf of"
		},
		"method": {
			"type": ["string", "null"],
			"description": "How the enquiry was made",
			"enum": ["phone", "email", "meeting", "post"]
		},
		"enquiryDate": {
			"type": ["string", "null"],
			"description": "Date the enquiry was made",
			"format": "date-time",
			"examples": ["2023-07-27T20:30:00.000Z"]
		},
		"enquiryDetails": {
			"type": ["string", "null"],
			"description": "Details of the enquiry"
		},
		"adviceGivenBy": {
			"type": ["string", "null"],
			"description": "Who issued the advice"
		},
		"adviceDate": {
			"type": ["string", "null"],
			"description": "Date the advice was given",
			"format": "date-time",
			"examples": ["2023-07-27T20:30:00.000Z"]
		},
		"adviceDetails": {
			"type": ["string", "null"],
			"description": "Details of the advice"
		},
		"status": {
			"type": ["string", "null"],
			"enum": ["checked", "unchecked", "readytopublish", "published", "donotpublish"]
		},
		"redactionStatus": {
			"type": ["string", "null"],
			"enum": ["unredacted", "redacted"]
		},
		"attachmentIds": {
			"type": "array",
			"items": {
				"type": "string",
				"description": "Collection of document IDs which are related to the S51 Advice"
			}
		}
	}
}
