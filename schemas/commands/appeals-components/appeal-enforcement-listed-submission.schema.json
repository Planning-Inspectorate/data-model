{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "commands/appeals-components/appeal-enforcement-listed-submission.schema.json",
  "title": "Appellant enforcement listed building submission properties",
  "description": "Schema defining any properties specific to enforcement listed building appeals",
  "type": "object",
  "additionalProperties": true,
  "required": [],
  "properties": {
    "namedIndividuals": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "firstName": {
            "type": "string",
            "description": "First name of the individual"
          },
          "lastName": {
            "type": "string",
            "description": "Last name of the individual"
          },
          "interestInLand": {
            "type": "string",
            "examples": ["owner, tenant, mortgage holder, other"],
            "description": "Individual's interest in the appeal land"
          }
        },
        "required": ["firstName", "lastName", "interestInLand"]
      },
      "description": "A list of individuals named on the enforcement notice"
    },
    "appealGrounds": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "groundRef": {
            "type": "string",
            "enum": ["a", "b", "c", "d", "e", "f", "g", "h", "i", "j", "k"],
            "description": "Name of the appeal ground"
          },
          "factsForGround": {
            "type": "string",
            "description": "Facts supporting the appeal ground"
          }
        },
        "required": ["groundRef", "factsForGround"]
      },
      "description": "A list of appeal grounds being pleaded"
    }
  }
}
