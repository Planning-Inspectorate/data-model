{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "commands/lpa-questionnaire.schema.json",
  "title": "LPA Questionnaire Command",
  "description": "Schema defining the data produced by the Front-Office when an LPA Questionnaire is submitted",
  "$comment": "This is a combination of an LPA Questionnaire and Documents",
  "type": "object",
  "additionalProperties": true,
  "required": ["casedata", "documents"],
  "properties": {
    "casedata": {
      "type": "object",
      "additionalProperties": true,
      "oneOf": [
        {
          "$comment": "Householder + CAS Planning",
          "allOf": [
            { "properties": { "caseType": { "enum": ["D", "ZP"] } } },
            { "$ref": "appeals-components/lpa-questionnaire-common.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-has.schema.json" }
          ]
        },
        {
          "$comment": "S78",
          "allOf": [
            { "properties": { "caseType": { "enum": ["W"] } } },
            { "$ref": "appeals-components/lpa-questionnaire-common.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-has.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-s78.schema.json" },
            { "$ref": "appeals-components/lpa-procedure-preference.schema.json" },
            { "$ref": "appeals-components/changed-listed-building-number.schema.json" },
            { "$ref": "appeals-components/infrastructure-levy.schema.json" },
            { "$ref": "appeals-components/environmental-impact-assessment.schema.json" },
            { "$ref": "appeals-components/site-designations-protection.schema.json" }
          ]
        },
        {
          "$comment": "S20",
          "allOf": [
            { "properties": { "caseType": { "enum": ["Y"] } } },
            { "$ref": "appeals-components/lpa-questionnaire-common.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-has.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-s78.schema.json" },
            { "$ref": "appeals-components/lpa-procedure-preference.schema.json" },
            { "$ref": "appeals-components/changed-listed-building-number.schema.json" },
            { "$ref": "appeals-components/infrastructure-levy.schema.json" },
            { "$ref": "appeals-components/environmental-impact-assessment.schema.json" },
            { "$ref": "appeals-components/site-designations-protection.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-listed-building.schema.json" }
          ]
        },
        {
          "$comment": "CAS Adverts",
          "allOf": [
            { "properties": { "caseType": { "enum": ["ZA"] } } },
            { "$ref": "appeals-components/lpa-questionnaire-common.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-has.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-advert.schema.json" },
            { "$ref": "appeals-components/lpa-procedure-preference.schema.json" }
          ]
        },
        {
          "$comment": "Adverts",
          "allOf": [
            { "properties": { "caseType": { "enum": ["H"] } } },
            { "$ref": "appeals-components/lpa-questionnaire-common.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-has.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-advert.schema.json" },
            { "$ref": "appeals-components/lpa-procedure-preference.schema.json" },
            { "$ref": "appeals-components/changed-listed-building-number.schema.json" }
          ]
        },
        {
          "$comment": "Enforcement",
          "allOf": [
            { "properties": { "caseType": { "enum": ["C"] } } },
            { "$ref": "appeals-components/lpa-questionnaire-common.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-has.schema.json" },
            { "$ref": "appeals-components/lpa-procedure-preference.schema.json" },
            { "$ref": "appeals-components/changed-listed-building-number.schema.json" },
            { "$ref": "appeals-components/infrastructure-levy.schema.json" },
            { "$ref": "appeals-components/environmental-impact-assessment.schema.json" },
            { "$ref": "appeals-components/site-designations-protection.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-enforcement.schema.json" }
          ]
        },
        {
          "$comment": "Lawful Development Certificate",
          "allOf": [
            { "properties": { "caseType": { "enum": ["X"] } } },
            { "$ref": "appeals-components/lpa-questionnaire-common.schema.json" },
            { "$ref": "appeals-components/lpa-procedure-preference.schema.json" },
            { "$ref": "appeals-components/infrastructure-levy.schema.json" },
            { "$ref": "appeals-components/lpa-questionnaire-ldc.schema.json" }
          ]
        }
      ]
    },
    "documents": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "properties": {
          "documentId": {
            "type": "string",
            "examples": ["4547fec8-16b2-47bb-836d-4d0baac04079"],
            "description": "The unique identifier for the document"
          },
          "filename": {
            "type": "string",
            "examples": ["filename.pdf"],
            "description": "Current stored name of the document"
          },
          "originalFilename": {
            "type": "string",
            "examples": ["original_filename.pdf"],
            "description": "Original name of document"
          },
          "size": {
            "type": "integer",
            "examples": [23452],
            "description": "The file size, in bytes"
          },
          "mime": {
            "type": ["string"],
            "examples": ["application/pdf"],
            "description": "The mime type for the current version of the file"
          },
          "documentURI": {
            "type": "string",
            "examples": [
              "https://custom-domain.gov.uk/container-name/appeal/7002471/4547fec8-16b2-47bb-836d-4d0baac04079/v1/filename.pdf"
            ],
            "description": "The internal location of the document",
            "$comment": "This property contains blob storage info (domain, container), caseReference, version and filename"
          },
          "dateCreated": {
            "type": "string",
            "format": "date-time",
            "examples": ["2023-07-27T20:30:00.000Z"],
            "description": "The creation date for the document"
          },
          "documentType": {
            "type": ["string", "null"],
            "enum": [
              null,
              "whoNotified",
              "whoNotifiedSiteNotice",
              "whoNotifiedLetterToNeighbours",
              "whoNotifiedPressAdvert",
              "conservationMap",
              "lpaCaseCorrespondence",
              "lpaCostsApplication",
              "lpaCostsCorrespondence",
              "lpaCostsWithdrawal",
              "otherPartyRepresentations",
              "planningOfficerReport",
              "plansDrawings",
              "developmentPlanPolicies",
              "supplementaryPlanning",
              "emergingPlan",
              "appealNotification",
              "otherRelevantPolicies",
              "treePreservationPlan",
              "consultationResponses",
              "eiaEnvironmentalStatement",
              "eiaScreeningDirection",
              "eiaScreeningOpinion",
              "eiaScopingOpinion",
              "communityInfrastructureLevy",
              "definitiveMapStatement",
              "historicEnglandConsultation",
              "stopNotice",
              "article4Direction",
              "enforcementList",
              "localDevelopmentOrder",
              "planningPermission",
              "lpaEnforcementNotice",
              "lpaEnforcementNoticePlan",
              "planningContraventionNotice",
              "relatedApplications",
              "otherRelevantMatters"
            ],
            "description": "The type of document, used for exchange, migrations and consumption from the appeal back-office system"
          }
        },
        "required": [
          "documentId",
          "filename",
          "originalFilename",
          "size",
          "mime",
          "documentURI",
          "dateCreated",
          "documentType"
        ]
      }
    }
  }
}
